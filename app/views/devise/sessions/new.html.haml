
%body.body_login
  .container
    .info
      %h1 Log in
  .form
    .thumbnail
      %img{:src => '/book.png'}
    %form.register-form
      %input{:placeholder => 'name', :type => 'text'}/
      %input{:placeholder => 'password', :type => 'password'}/
      %input{:placeholder => 'email address', :type => 'text'}/
      %button create
      %p.message
        Already registered?
        %a{:href => '#'} Sign In
    %form.login-form
    = form_for(resource, as: resource_name, url: session_path(resource_name), class: 'register-form') do |f|
      = f.email_field :email, autofocus: true,:placeholder => 'email', :type => 'email', id: 'email'
      = f.password_field :password, autocomplete: 'off',:placeholder => 'password', :type => 'password', id: 'pass'
      .actions
        = f.submit 'Sign in', class: 'login'
      %p.message
        Not registered?
        = link_to 'Sign up', new_registration_path(resource_name)
