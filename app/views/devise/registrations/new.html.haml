%body.body_login
  .container
    .info
      %h1 Sign up
  .form
    .thumbnail
      %img{:src => '/uploads/book.png'}
    = form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'register-form') do |f|
      = f.email_field :email, autofocus: true,:placeholder => 'email', :type => 'email', id: 'email_s'
      = f.password_field :password, autocomplete: "off",:placeholder => 'password', :type => 'password', id: 'pass_s'
      = f.password_field :password_confirmation, autocomplete: "off",:placeholder => 'confirm password', :type => 'password', id: 'conf_pass_s'
      .actions
        = f.submit "Sign up", class: 'reg'
      %p.message
        Already registered?
        = link_to "Log in", new_session_path(resource_name)
