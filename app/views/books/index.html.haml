%p#notice= notice
%h1 Top 5 Books
%table.top_tabs
  %thead
    %tr
      %th Name
      %th Status
      %th Author
      %th Genre
      %th Img
      %th Description
      %th{:colspan => "3"}
  %tbody
  - @exp.each do |b|
    %tr
      %td= link_to b.name, book_path(b)
      %td= b.status
      %td= b.author
      %td= b.genre
      %td
        %img{:src => "#{b.img}", :class => "images"}
      %td= b.description
%br/
%h1 Books
%table.tabs
  %thead
    %tr
      %th Name
      %th Status
      %th Author
      %th Genre
      %th Img
      %th Description
      %th{:colspan => "3"}
  %tbody
    - @books.each do |book|
      %tr
        %td= link_to book.name, book_path(book)
        %td= book.status
        %td= book.author
        %td= book.genre
        %td
          %img{:src => "#{book.img}", :class => "images"}
        %td= book.description

%br/
